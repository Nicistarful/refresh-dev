{
	"name": "refresh",
	"version": "1.4.3",
	"author": "PutzFee",
	"private": true,
	"description": "Household manager",
	"main": "main.js",
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"start": "concurrently npm:start-tailwind npm:start-electron",
		"start-tailwind": "npx tailwindcss -i ./public/global.css -o ./public/build/bundle.css --watch",
		"start-electron": "electron .",
		"start-sirv": "sirv public --dev",
		"dist": "npm run build && electron-builder --publish never"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"electron": "^17.2.0",
		"electron-builder": "^23.6.0",
		"eslint": "^7.32.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.2.0",
		"rollup": "^2.3.4",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^7.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.49.0",
		"tailwindcss": "^3.0.23"
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0",
		"electron-reload": "^2.0.0-alpha.1",
		"firebase": "^9.6.9",
		"sirv-cli": "^2.0.0",
		"svelte-simple-modal": "^1.3.1",
		"svelte-spa-router": "^3.2.0"
	}
}
